<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ghelfer.trabalhopdm20162.ListarPagamentosActivity">

    <TextView
        android:text="Lista de Pagamentos"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="none"
            android:layout_weight="1"
            android:hint="Evento"
            android:id="@+id/txtNomeEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_weight="1"
            android:text="Pagamento"
            android:id="@+id/checkBoxPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:onClick="onBtnAtualizarPagamento"
        android:text="Atualizar pagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listViewPagamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
